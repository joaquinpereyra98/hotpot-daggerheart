{
  "id": "hotpot-daggerheart",
  "title": "Hotpot!",
  "description": "",
  "version": "#{VERSION}#",
  "compatibility": {
    "minimun": "13",
    "verified": "13"
  },
  "authors": [
    {
      "name": "JoaquinP",
      "url": "https://github.com/joaquinpereyra98",
      "email": "joaquinpereyra98@gmail.com",
      "discord": "joaquinp98"
    }
  ],
  "url": "#{URL}#",
  "download": "#{DOWNLOAD}#",
  "manifest": "#{MANIFEST}#",
  "readme": "README.md",
  "socket": false,
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "relationships": {
    "requires": [{
      "id":"daggerheart",
      "type": "system",
      "manifest": "https://github.com/Foundryborne/daggerheart/releases/latest/download/system.json"
    }]
  },
  "esmodules": ["hotpot.mjs"],
  "styles": ["styles/hotpot.css"],
  "documentTypes": {
    "Item": {
      "ingredient": {
        "htmlFields": ["description"]
      }
    },
    "ChatMessage": {
      "hotpot": {
        "filePathFields": {
          "recipe.img": ["IMAGE"]
        },
        "htmlFields": ["recipe.description"],
        "gmOnlyFields": ["completed", "collectedMatched"]
      }
    },
    "JournalEntryPage": {
      "recipe": {
        "filePathFields": {
          "img": ["IMAGE"]
        }
      }
    }
  },
  "flags": {
    "hotReload": {
      "extensions": ["css", "hbs"],
      "paths": ["styles/hotpot.css", "templates/"]
    }
  }
}
